{
  "include": ["src/**/*"],
  "compilerOptions": {
    "target": "ES2022",
    "module": "Node16",
    "rootDir": "./src",
    "moduleResolution": "Node16",
    "outDir": "./build",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true
  }
}
